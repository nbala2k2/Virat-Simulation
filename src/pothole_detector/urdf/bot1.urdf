<?xml version="1.0"?>
<robot name="myfirst">
  <link name="body_bot">
    <visual>
      <origin rpy="0.0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://pothole_detector/meshes/body/bot2.dae"/>
      </geometry>
    </visual>
  </link>

  <joint name="movingbot" type="revolute">
    <origin rpy="0 0 0" xyz="0.2 -0.05 0"/>
    <parent link="body_bot"/>
    <child link="main_wheel"/>
    <axis xyz="0 0 1" />
    <limit upper="1.57" lower="-1.57" velocity="2" effort="1"/>
  </joint>

  

  

  <link name="main_wheel">
    <visual>
      <origin rpy="0.0 0 0" xyz="0 0 0.05"/>
      <geometry>
        <mesh filename="package://pothole_detector/meshes/wheels/tyre1.dae"/>
      </geometry>
    </visual>
  </link>

  <joint name="final_bot" type="revolute">
    <origin rpy="0 0 0" xyz="0.2 -0.01 0"/>
    <parent link="body_bot"/>
    <child link="castor_wheel"/>
    <axis xyz="0 0 1" />
    <limit upper="1.57" lower="-1.57" velocity="2" effort="1"/>
  </joint>


  <link name="castor_wheel">
    <visual>
      <origin rpy="0.0 0 0" xyz="0.4 0 0.04"/>
      <geometry>
        <mesh filename="package://pothole_detector/meshes/wheels/castors1.dae"/>
      </geometry>
    </visual>
  </link>

</robot>